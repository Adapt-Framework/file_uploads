<?xml version="1.0" encoding="UTF-8"?>
<adapt_framework>
    <bundle>
        <label>Adapt File Uploader</label>
        <description>Uploads files and stores them in the file store</description>
        <name>file_uploads</name>
        <namespace>\adapt\file_uploads</namespace>
        <version_status>release</version_status>
        <availability>public</availability>
        <version>1.0.0</version>
        <type>extension</type>
        <copyright>2016 Adapt Framework</copyright>
        <license>MIT</license>
        <website>http://www.adaptframework.com/documentation/adapt/file_uploads</website>
        <author>
            <name>Matt Bruton</name>
            <email>matt.bruton@gmail.com</email>
        </author>
        <depends_on>
            <bundle>
                <name>adapt</name>
                <version>2.0</version>
            </bundle>
        </depends_on>
        <settings>
            <category name="file upload settings">
                <setting>
                    <name>file_uploads.mime_restriction</name>
                    <label>Restrict file upload by mime type</label>
                    <default_value>No</default_value>
                    <allowed_values>
                        <value>Yes</value>
                        <value>No</value>
                    </allowed_values>
                </setting>
                <setting>
                    <name>file_uploads.mime_types</name>
                    <label>mime types</label>
                    <default_values>
                        <value>text/plain</value>
                    </default_values>
                </setting>
            </category>
        </settings>
    </bundle>
</adapt_framework>
